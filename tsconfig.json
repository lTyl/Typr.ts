{
	"compilerOptions": {
		"declaration": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"removeComments": false,
		"module": "commonjs",
		"target": "es6",
		"allowJs": false,
		"baseUrl": "./src",
		"skipLibCheck": true
	},
	"include": [
		"node_modules/@types",
		"./src/**/*.ts",
		"./app/declarations/*.*"
	]
}